                            Grid.Row="1"
                            Grid.Column="0"
                            Focusable="False"
                            IsTabStop="False"
                            VerticalScrollBarVisibility="Disabled"
                            >
                            <FlowDocument Focusable="False">
                                <Paragraph>
                                    <Image
                                        Width="50"
