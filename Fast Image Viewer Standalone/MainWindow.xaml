<Window x:Name="MainFIV" x:Class="FIVStandard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIVStandard"
        xmlns:utils="clr-namespace:FIVStandard.Utils"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="FIV" 
        Height="600" Width="800" 
        Background="#FFE27D60" 
        FontSize="14" 
        WindowStartupLocation="CenterScreen" 
        KeyDown="OnKeyDown" 
        Icon="Resources/FIVIcon.ico" WindowState="Maximized"
        MouseDown="OnMouseDown"
        >

    <Grid Margin="0,0,0,0">
        <Button x:Name="Btn_Prev" Height="40" Width="40" Margin="0,2,80,0" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top" Click="OnClick_Prev" IsTabStop="False" Focusable="False">
            <Button.Background>
                <ImageBrush ImageSource="Resources/Arrow_Left.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>

        <Button x:Name="Btn_Next" 
                Height="40" Width="40" 
                Margin="80,2,0,0" 
                VerticalAlignment="Top" 
                Click="OnClick_Next" 
                IsTabStop="False" 
                Focusable="False" 
                ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Arrow_Right.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>

        <Button Content="Open" 
                Width="75" 
                Margin="0,10,10,0" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right" 
                Click="OpenBrowseImage" 
                IsTabStop="False" 
                Focusable="False" 
                ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                />

        <utils:ZoomBorder x:Name="border" 
                      ClipToBounds="True" 
                      Background="#FF2F3136" 
                      Margin="0,44,0,0" Padding="0" Canvas.Left="0" Canvas.Top="0" Grid.Row="1" Grid.RowSpan="9" Grid.ColumnSpan="10" Grid.Column="1" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <MediaElement Name="MediaView" 
                          IsMuted="True"
                          LoadedBehavior="Manual" UnloadedBehavior="Manual" 
                          ScrubbingEnabled="True" 
                          StretchDirection="DownOnly" 
                          MediaEnded="OnClipEnded" 
                          ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                          />
        </utils:ZoomBorder>
    </Grid>
</Window>