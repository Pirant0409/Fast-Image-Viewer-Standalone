                            <!--  Language Dropdown  -->
                            <Controls:SplitButton
                                x:Name="ShownLanguageDrop"
                                Grid.Row="1"
                                Height="60"
                                Margin="20,40,5,0"
                                VerticalAlignment="Center"
                                Click="OnLanguageClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Path=GetLanguageString, Mode=OneTime}"
                                Orientation="Vertical"
                                SelectedIndex="{Binding Path=ShownLanguageDropIndex, Mode=TwoWay}"
                                />

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Height="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static p:Resources.ShownLanguageInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  Dark Mode Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="2"
                                Width="140"
                                Height="100"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Header="{localized:Static p:Resources.DarkMode}"
                                IsChecked="{Binding Path=DarkModeToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static p:Resources.Off}"
                                OnLabel="{localized:Static p:Resources.On}"
                                />

                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="2"
                                Height="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static p:Resources.DarkModeInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  Theme Accent Dropdown  -->
                            <Controls:SplitButton
                                x:Name="ThemeAccentDrop"
                                Grid.Row="3"
                                Height="60"
                                Margin="20,40,5,0"
                                VerticalAlignment="Center"
                                Click="OnAccentClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Path=ThemeAccents, Mode=OneWay}"
                                Orientation="Vertical"
                                SelectedIndex="{Binding Path=ThemeAccentDropIndex, Mode=TwoWay}"
                                >
                                <Controls:SplitButton.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="BorderBrush" Value="{Binding Converter={StaticResource TextToColorConverter}}" />
                                        <Setter Property="BorderThickness" Value="20,0,0,0" />
                                    </Style>
                                </Controls:SplitButton.ItemContainerStyle>
                            </Controls:SplitButton>

                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="2"
                                Height="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static p:Resources.ThemeAccentInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  Stretch Image Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="4"
                                Height="100"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Header="{localized:Static p:Resources.StretchImage}"
                                IsChecked="{Binding Path=StretchImageToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static p:Resources.Off}"
                                OnLabel="{localized:Static p:Resources.On}"
                                />

                            <StackPanel
                                Grid.Row="4"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="2"
                                Height="60"
                                Padding="0,0,20,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static p:Resources.StretchImageInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  Downsize Image  -->
                            <Controls:ToggleSwitch
                                Grid.Row="5"
                                Height="100"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Header="{localized:Static p:Resources.DownsizeImage}"
                                IsChecked="{Binding Path=DownsizeImageToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static p:Resources.Off}"
                                OnLabel="{localized:Static p:Resources.On}"
                                />

                            <StackPanel
                                Grid.Row="5"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="2"
                                Height="60"
                                Padding="0,0,20,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static p:Resources.DownsizeImageInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  Zoom Sensitivity  -->
                            <TextBlock
                                Grid.Row="6"
                                Margin="10,50,0,0"
                                VerticalAlignment="Center"
                                Text="{Binding Path=ZoomSensitivityString, Mode=OneWay}"
                                TextAlignment="Center"
                                />
                            <Slider
                                Grid.Row="6"
                                Height="100"
                                Margin="20,0,5,0"
                                VerticalAlignment="Center"
                                Focusable="False"
                                IsSnapToTickEnabled="True"
                                IsTabStop="False"
                                LargeChange="0.05"
                                Maximum="2"
                                Minimum="0.1"
                                TickFrequency="0.05"
                                Value="{Binding Path=ZoomSensitivity, Mode=TwoWay}"
                                />

                            <StackPanel
                                Grid.Row="6"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="2"
                                Height="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static p:Resources.ZoomSensitivityInfo}"
                                TextWrapping="Wrap"
                                />



                            <!--  End Settings Grid  -->
                        </Grid>

                        <!--  Shortcuts  -->
                        <Grid
                            Margin="10"
                            Focusable="False"
                            >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,0,10"
                                Focusable="False"
                                FontSize="30"
                                Text="{localized:Static p:Resources.Shortcuts}"
                                />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="30,0,0,0"
                                Focusable="False"
                                Text="{localized:Static p:Resources.PreviousImageShortcut}"
                                />
                            <Button
                                Grid.Row="2"
                                Grid.Column="1"
                                MinWidth="80"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Click="OnShortcutClick"
                                Content="{Binding Settings.GoBackwardKey, Converter={StaticResource KeyToStringConverter}}"
                                Focusable="False"
                                IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
                                IsTabStop="False"
                                Tag="{Binding Settings.GoBackwardKey, Mode=TwoWay}"
                                />

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="30,0,0,0"
                                Focusable="False"
                                Text="{localized:Static p:Resources.NextImageShortcut}"
                                />
                            <Button
                                Grid.Row="3"
                                Grid.Column="1"
                                MinWidth="80"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Click="OnShortcutClick"
                                Content="{Binding Settings.GoForwardKey, Converter={StaticResource KeyToStringConverter}}"
                                Focusable="False"
                                IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
                                IsTabStop="False"
                                Tag="{Binding Settings.GoForwardKey, Mode=TwoWay}"
                                />

                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="30,0,0,0"
                                Focusable="False"
                                Text="{localized:Static p:Resources.PauseAnimationShortcut}"
                                />
                            <Button
                                Grid.Row="4"
                                Grid.Column="1"
                                MinWidth="80"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Click="OnShortcutClick"
                                Content="{Binding Settings.PauseKey, Converter={StaticResource KeyToStringConverter}}"
                                Focusable="False"
                                IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
                                IsTabStop="False"
                                Tag="{Binding Settings.PauseKey, Mode=TwoWay}"
                                />

                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                Margin="30,0,0,0"
                                Focusable="False"
                                Text="{localized:Static p:Resources.DeleteImageShortcut}"
                                />
                            <Button
                                Grid.Row="5"
                                Grid.Column="1"
                                MinWidth="80"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Click="OnShortcutClick"
                                Content="{Binding Settings.DeleteKey, Converter={StaticResource KeyToStringConverter}}"
                                Focusable="False"
                                IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
                                IsTabStop="False"
                                Tag="{Binding Settings.DeleteKey, Mode=TwoWay}"
                                />

                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="30,0,0,0"
                                Focusable="False"
                                Text="{localized:Static p:Resources.StretchImageShortcut}"
                                />
                            <Button
                                Grid.Row="6"
                                Grid.Column="1"
                                MinWidth="80"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Click="OnShortcutClick"
                                Content="{Binding Settings.StretchImageKey, Converter={StaticResource KeyToStringConverter}}"
                                Focusable="False"
                                IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
                                IsTabStop="False"
                                Tag="{Binding Settings.StretchImageKey, Mode=TwoWay}"
                                />

                            <TextBlock
                                Grid.Row="7"
                                Grid.Column="0"
                                Margin="30,0,0,0"
                                Focusable="False"
                                Text="{localized:Static p:Resources.DownsizeImageShortcut}"
                                />
                            <Button
                                Grid.Row="7"
                                Grid.Column="1"
                                MinWidth="80"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Click="OnShortcutClick"
                                Content="{Binding Settings.DownsizeImageKey, Converter={StaticResource KeyToStringConverter}}"
                                Focusable="False"
                                IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
                                IsTabStop="False"
                                Tag="{Binding Settings.DownsizeImageKey, Mode=TwoWay}"
                                />

                            <TextBlock
                                Grid.Row="8"
                                Grid.Column="0"
                                Margin="30,0,0,0"
                                Focusable="False"
                                Text="{localized:Static p:Resources.ExploreImageLocationShortcut}"
                                />
                            <Button
                                Grid.Row="8"
                                Grid.Column="1"
                                MinWidth="80"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Click="OnShortcutClick"
                                Content="{Binding Settings.ExploreFileKey, Converter={StaticResource KeyToStringConverter}}"
                                Focusable="False"
                                IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
                                IsTabStop="False"
                                Tag="{Binding Settings.ExploreFileKey, Mode=TwoWay}"
                                />

                            <TextBlock
                                Grid.Row="9"
                                Grid.Column="0"
                                Margin="30,0,0,0"
                                Focusable="False"
                                Text="{localized:Static p:Resources.CopyToClipboard}"
                                />
                            <Button
                                Grid.Row="9"
                                Grid.Column="1"
                                MinWidth="80"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Click="OnShortcutClick"
                                Content="{Binding Settings.CopyToClipboardKey, Converter={StaticResource KeyToStringConverter}}"
                                Focusable="False"
                                IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
                                IsTabStop="False"
                                Tag="{Binding Settings.CopyToClipboardKey, Mode=TwoWay}"
                                />

                            <!--<Image Source="Resources/kblayoutkeys.png" />-->
                        </Grid>
                    </StackPanel>

                </ScrollViewer>
            </Controls:MetroTabItem>
            <!--  UNUSED TAB ITEM  -->
            <Controls:MetroTabItem
                Controls:ControlsHelper.HeaderFontSize="16"
                Header="{localized:Static p:Resources.Help}"
                IsEnabled="False"
                Visibility="Collapsed"
                >
                <ScrollViewer
                    Focusable="False"
                    IsTabStop="False"
                    VerticalScrollBarVisibility="Auto"
                    />
            </Controls:MetroTabItem>
            <Controls:MetroTabItem
                Controls:ControlsHelper.HeaderFontSize="16"
                Header="{localized:Static p:Resources.About}"
                >
                <ScrollViewer
                    Margin="5"
                    VerticalScrollBarVisibility="Auto"
                    >
