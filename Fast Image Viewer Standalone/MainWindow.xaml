                    Fill="{DynamicResource MahApps.Brushes.Accent}"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    Stretch="Uniform"
                    />
            </Border>
            <Border
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="#00000000"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ToolTip="{local:Loc DownsizeOnTooltip,
                                    Mode=OneWay,
                                    IsAsync=True}"
                Visibility="{Binding Settings.DownsizeImageToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, IsAsync=True}"
                >
                <Path
                    Data="M21,15H23V17H21V15M21,11H23V13H21V11M23,19H21V21C22,21 23,20 23,19M13,3H15V5H13V3M21,7H23V9H21V7M21,3V5H23C23,4 22,3 21,3M1,7H3V9H1V7M17,3H19V5H17V3M17,19H19V21H17V19M3,3C2,3 1,4 1,5H3V3M9,3H11V5H9V3M5,3H7V5H5V3M1,11V19A2,2 0 0,0 3,21H15V11H1M3,19L5.5,15.79L7.29,17.94L9.79,14.72L13,19H3Z"
                    Fill="{DynamicResource MahApps.Brushes.Accent}"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    Stretch="Uniform"
                    />
            </Border>
            <Border
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="#00000000"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ToolTip="{local:Loc ThumbnailListOnTooltip,
                                    Mode=OneWay,
                                    IsAsync=True}"
                Visibility="{Binding Settings.EnableThumbnailListToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, IsAsync=True}"
                >
                <Path
                    Data="M4 14h4v-4H4v4zm0 5h4v-4H4v4zM4 9h4V5H4v4zm5 5h12v-4H9v4zm0 5h12v-4H9v4zM9 5v4h12V5H9z"
                    Fill="{DynamicResource MahApps.Brushes.Accent}"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    Stretch="Uniform"
                    />
            </Border>
        </StackPanel>
        <Controls:MetroTabControl
            Focusable="False"
            IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
            IsTabStop="False"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            SelectionChanged="MetroTabControl_SelectionChanged"
            >
            <!--  KeepVisualTreeInMemoryWhenChangingTabs="True"  -->

            <Controls:MetroTabItem
                Controls:HeaderedControlHelper.HeaderFontSize="16"
                Header="{local:Loc General,
                                   Mode=OneWay,
                                   IsAsync=True}"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                >

                <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <!--  Context Menu | Window  -->
                    <Grid.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                Click="OnOpenFileLocation"
                                Focusable="False"
                                Header="{local:Loc OpenFileLocation,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />
                            <MenuItem
                                Click="OnCopyToClipboard"
                                Focusable="False"
                                Header="{local:Loc CopyImageToClipboard,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />
                            <MenuItem
                                Click="OnCutToClipboard"
                                Focusable="False"
                                Header="{local:Loc CutFileToClipboard,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />
                            <Separator />
                            <MenuItem
                                Click="OnDeleteClick"
                                Focusable="False"
                                Header="{local:Loc Delete,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />
                        </ContextMenu>
                    </Grid.ContextMenu>

                    <Separator
                        VerticalAlignment="Top"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        />

                    <!--  Image Information  -->
                    <Border
                        Width="200"
                        Height="40"
                        Margin="2,2,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        >
                        <TextBlock
                            VerticalAlignment="Center"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            Text="{Binding ImgResStringFormat, Mode=OneWay, IsAsync=True}"
                            TextWrapping="Wrap"
                            />
                    </Border>

                    <Button
                        x:Name="Btn_Prev"
                        Width="60"
                        Height="40"
                        Margin="0,3,80,0"
                        Padding="0"
                        VerticalAlignment="Top"
                        Click="OnClick_Prev"
                        Content="🡄"
                        Focusable="False"
                        FontSize="25"
                        IsTabStop="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        />

                    <Button
                        x:Name="Btn_Next"
                        Width="60"
                        Height="40"
                        Margin="80,3,0,0"
                        Padding="0"
                        VerticalAlignment="Top"
                        Click="OnClick_Next"
                        Content="🡆"
                        Focusable="False"
                        FontSize="25"
                        IsTabStop="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        />

                    <Button
                        Width="75"
                        Margin="0,10,10,0"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="OnOpenBrowseImage"
                        Content="{local:Loc Open,
                                            Mode=OneWay,
                                            IsAsync=True}"
                        Focusable="False"
                        IsTabStop="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        />

                    <!--  Main Window Controls  -->
                    <Grid
                        AllowDrop="True"
                        Drop="Media_Drop"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Thumbnail List Control  -->
                        <ListBox
                            x:Name="thumbnailList"
                            Margin="0,44,0,0"
                            Focusable="False"
                            IsSynchronizedWithCurrentItem="True"
                            IsTabStop="False"
                            IsTextSearchEnabled="False"
                            ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                            ItemsSource="{Binding ImagesDataView, Mode=OneWay}"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            SelectedItem="{Binding ImageItem, Mode=TwoWay}"
                            SelectionChanged="ThumbnailList_SelectionChanged"
                            VirtualizingStackPanel.IsVirtualizing="True"
                            Visibility="{Binding Settings.EnableThumbnailListToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                            >

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel
                                        VerticalAlignment="Top"
                                        IsItemsHost="True"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                        />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                        BorderThickness="2"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                        >
                                        <StackPanel
                                            Width="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                            Height="{Binding Settings.ThumbnailSizePlusText, Mode=OneWay}"
                                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                            ToolTip="{Binding ThumbnailName, Mode=OneWay, IsAsync=True}"
                                            >

                                            <TextBlock
                                                Width="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                                FontSize="10"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                Text="{Binding ThumbnailName, Mode=OneWay, IsAsync=True}"
                                                TextAlignment="Center"
                                                TextTrimming="CharacterEllipsis"
                                                />
                                            <Image
                                                Width="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                                Height="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                                RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                Source="{Binding ThumbnailImage, Mode=OneWay, IsAsync=True}"
                                                />
                                            <Border
                                                Width="{Binding Settings.ThumbnailSizeGifTag, Mode=OneWay}"
                                                Height="{Binding Settings.ThumbnailSizeGifTag, Mode=OneWay}"
                                                Margin="0,-50,0,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Background="#00000000"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                ToolTip="{local:Loc DownsizeOnTooltip,
                                                                    Mode=OneWay,
                                                                    IsAsync=True}"
                                                Visibility="{Binding IsAnimated, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, IsAsync=True}"
                                                >
