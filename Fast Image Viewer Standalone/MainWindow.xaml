<Controls:MetroWindow
    x:Class="FIVStandard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:converter="clr-namespace:FIVStandard.Converters"
    xmlns:core="clr-namespace:FIVStandard.Core"
    xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:FIVStandard.Localization"
    xmlns:utils="clr-namespace:FIVStandard.Utils"
    x:Name="MainFIV"
    Title="{Binding TitleInformation, Mode=OneWay, IsAsync=True}"
    Width="{Binding Settings.WindowWidth, Mode=TwoWay}"
    Height="{Binding Settings.WindowHeight, Mode=TwoWay}"
    MinWidth="600"
    MinHeight="480"
    Closing="MainFIV_Closing"
    FontSize="16"
    Icon="Resources/FIVIcon.ico"
    IsTabStop="False"
    Loaded="OnAppLoaded"
    MouseDown="OnMouseDown"
    PreviewKeyDown="OnKeyDown"
    TitleCharacterCasing="Normal"
    WindowStartupLocation="CenterScreen"
    WindowState="{Binding Settings.WindowState, Mode=TwoWay}"
    >
    <!--  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  -->
    <!--  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  -->
    <!--  mc:Ignorable="d"  -->

    <Window.Resources>
        <converter:TextToColorConverter x:Key="TextToColorConverter" />
        <converter:KeyToStringConverter x:Key="KeyToStringConverter" />
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converter:BoolToVisibilityConverterReverse x:Key="BoolToVisibilityConverterReverse" />
        <converter:BoolFromAccentToGrayConverter x:Key="BoolFromAccentToGrayConverter" />
        <converter:BoolToStretchDirectionConverter x:Key="BoolToStretchDirectionConverter" />
        <converter:TimeSpanTickConverter x:Key="TimeSpanTickConverter" />

        <Style
            x:Key="ListBoxItemStyle"
            BasedOn="{StaticResource {x:Type ListBoxItem}}"
            TargetType="ListBoxItem"
            >

            <Setter Property="Padding" Value="5" />
            <Setter Property="IsTabStop" Value="False" />
            <!--  Fixes spacebar not working and some other bugs if selecting via mouse but disables now the actual selecing  -->
            <Setter Property="Focusable" Value="False" />
            <EventSetter
                Event="PreviewMouseDown"
                Handler="ListBox_PreviewMouseDown"
                />
            <EventSetter
                Event="Loaded"
                Handler="OnThumbnailItemVisible"
                />
        </Style>
    </Window.Resources>

    <!--  Window Bar Buttons  -->
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands
            IsTabStop="False"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            >
            <Button
                Click="OnDonateClick"
                Focusable="False"
                IsTabStop="False"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{local:Loc Donate, Mode=OneWay, IsAsync=True}" />
                    <iconPacks:PackIconBoxIcons
                        IsTabStop="False"
                        Kind="LogosPaypal"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        />
                </StackPanel>

            </Button>
            <Button
                Click="OnCheckUpdateClick"
                Focusable="False"
                IsEnabled="{Binding AppUpdater.NotUpdating, Mode=OneWay}"
                IsTabStop="False"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{local:Loc CheckForUpdates, Mode=OneWay, IsAsync=True}" />
                    <iconPacks:PackIconUnicons
                        IsTabStop="False"
                        Kind="Sync"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        />
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <StackPanel
            Height="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            >

            <iconPacks:PackIconBoxIcons
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="Transparent"
                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                IsTabStop="False"
                Kind="SolidMoon"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ToolTip="{local:Loc DarkModeOnTooltip,
                                    Mode=OneWay,
                                    IsAsync=True}"
                Visibility="{Binding Settings.DarkModeToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, IsAsync=True}"
                />
            <iconPacks:PackIconBoxIcons
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="Transparent"
                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                IsTabStop="False"
                Kind="RegularExpand"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ToolTip="{local:Loc StretchOnTooltip,
                                    Mode=OneWay,
                                    IsAsync=True}"
                Visibility="{Binding Settings.StretchImageToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, IsAsync=True}"
                />
            <iconPacks:PackIconUnicons
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="Transparent"
                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                IsTabStop="False"
                Kind="ImageResizeSquare"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ToolTip="{local:Loc DownsizeOnTooltip,
                                    Mode=OneWay,
                                    IsAsync=True}"
                Visibility="{Binding Settings.DownsizeImageToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, IsAsync=True}"
                />
            <iconPacks:PackIconBoxIcons
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="Transparent"
                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                IsTabStop="False"
                Kind="RegularListUl"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ToolTip="{local:Loc ThumbnailListOnTooltip,
                                    Mode=OneWay,
                                    IsAsync=True}"
                Visibility="{Binding Settings.EnableThumbnailListToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay, IsAsync=True}"
                />
        </StackPanel>
        <Controls:MetroTabControl
            Focusable="False"
            IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
            IsTabStop="False"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            SelectionChanged="MetroTabControl_SelectionChanged"
            >
            <!--  KeepVisualTreeInMemoryWhenChangingTabs="True"  -->

            <Controls:MetroTabItem
                Controls:HeaderedControlHelper.HeaderFontSize="16"
                Header="{local:Loc General,
                                   Mode=OneWay,
                                   IsAsync=True}"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                >

                <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <!--  Context Menu | Window  -->
                    <Grid.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                Click="OnOpenFileLocation"
                                Focusable="False"
                                Header="{local:Loc OpenFileLocation,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />
                            <MenuItem
                                Click="OnCopyToClipboard"
                                Focusable="False"
                                Header="{local:Loc CopyImageToClipboard,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />
                            <MenuItem
                                Click="OnCutToClipboard"
                                Focusable="False"
                                Header="{local:Loc CutFileToClipboard,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />
                            <Separator />
                            <MenuItem
                                Click="OnDeleteClick"
                                Focusable="False"
                                Header="{local:Loc Delete,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />
                        </ContextMenu>
                    </Grid.ContextMenu>

                    <Separator
                        VerticalAlignment="Top"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        />

                    <!--  Image Information  -->
                    <Border
                        Width="200"
                        Height="40"
                        Margin="2,2,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        >
                        <TextBlock
                            VerticalAlignment="Center"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            Text="{Binding ImgResStringFormat, Mode=OneWay, IsAsync=True}"
                            TextWrapping="Wrap"
                            />
                    </Border>

                    <Button
                        x:Name="Btn_Prev"
                        Width="60"
                        Height="40"
                        Margin="0,3,80,0"
                        Padding="0"
                        VerticalAlignment="Top"
                        Click="OnClick_Prev"
                        Focusable="False"
                        IsTabStop="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        >
                        <iconPacks:PackIconBoxIcons
                            Width="25"
                            Height="25"
                            Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                            IsTabStop="False"
                            Kind="SolidLeftArrow"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            />
                    </Button>

                    <Button
                        x:Name="Btn_Next"
                        Width="60"
                        Height="40"
                        Margin="80,3,0,0"
                        Padding="0"
                        VerticalAlignment="Top"
                        Click="OnClick_Next"
                        Focusable="False"
                        IsTabStop="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        >
                        <iconPacks:PackIconBoxIcons
                            Width="25"
                            Height="25"
                            Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                            IsTabStop="False"
                            Kind="SolidRightArrow"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            />
                    </Button>

                    <Button
                        Width="75"
                        Margin="0,10,10,0"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="OnOpenBrowseImage"
                        Content="{local:Loc Open,
                                            Mode=OneWay,
                                            IsAsync=True}"
                        Focusable="False"
                        IsTabStop="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        />

                    <!--  Main Window Controls  -->
                    <Grid
                        AllowDrop="True"
                        Drop="Media_Drop"
                        MouseMove="MediaImageView_MouseMove"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Thumbnail List Control  -->
                        <ListBox
                            x:Name="thumbnailList"
                            Margin="0,44,0,0"
                            Focusable="False"
                            IsSynchronizedWithCurrentItem="True"
                            IsTabStop="False"
                            IsTextSearchEnabled="False"
                            ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                            ItemsSource="{Binding ImagesDataView, Mode=OneWay}"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            SelectedItem="{Binding ImageItem, Mode=TwoWay}"
                            SelectionChanged="ThumbnailList_SelectionChanged"
                            VirtualizingStackPanel.IsVirtualizing="True"
                            Visibility="{Binding Settings.EnableThumbnailListToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                            >

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel
                                        VerticalAlignment="Top"
                                        IsItemsHost="True"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                        />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        BorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                        BorderThickness="2"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                        >
                                        <StackPanel
                                            Width="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                            Height="{Binding Settings.ThumbnailSizePlusText, Mode=OneWay}"
                                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                            ToolTip="{Binding ThumbnailName, Mode=OneWay, IsAsync=True}"
                                            >

                                            <TextBlock
                                                Width="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                                FontSize="10"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                Text="{Binding ThumbnailName, Mode=OneWay, IsAsync=True}"
                                                TextAlignment="Center"
                                                TextTrimming="CharacterEllipsis"
                                                />
                                            <Image
                                                Width="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                                Height="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                                RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                Source="{Binding ThumbnailImage, Mode=OneWay, IsAsync=True}"
                                                />

                                            <iconPacks:PackIconBoxIcons
                                                Width="{Binding Settings.ThumbnailSizeGifTag, Mode=OneWay}"
                                                Height="{Binding Settings.ThumbnailSizeGifTag, Mode=OneWay}"
                                                Margin="0,-70,0,0"
                                                Padding="5"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                                IsTabStop="False"
                                                Kind="SolidVideo"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                Visibility="{Binding IsAnimated, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"
                                                />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!--  Progress Slider Control  -->
                        <Slider
                            x:Name="MediaProgression"
                            Grid.Row="0"
                            Grid.Column="1"
                            Height="25"
                            Margin="10,0,150,2"
                            VerticalAlignment="Bottom"
                            Focusable="False"
                            IsMoveToPointEnabled="True"
                            IsTabStop="False"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            Visibility="Hidden"
                            Value="{Binding Path=Position, ElementName=MediaView, Converter={StaticResource TimeSpanTickConverter}, Mode=TwoWay}"
                            >
                            <i:Interaction.Behaviors>
                                <core:FreeSlideBehavior />
                            </i:Interaction.Behaviors>
                        </Slider>

                        <!--  Volume Slider Control  -->
                        <Button
                            x:Name="VolumeProgressionIcon"
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="25"
                            Height="25"
                            Margin="10,0,110,2"
                            Padding="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            BorderThickness="0"
                            Click="MediaVolumeIcon_Click"
                            Focusable="False"
                            Foreground="{x:Null}"
                            IsTabStop="False"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            Visibility="Hidden"
                            >
                            <iconPacks:PackIconBoxIcons
                                x:Name="VolumeIcon"
                                Foreground="{DynamicResource MahApps.Brushes.Accent}"
                                IsTabStop="False"
                                Kind="{Binding Settings.VolumeIcon, Mode=OneWay}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />
                        </Button>
                        <Slider
                            x:Name="VolumeProgression"
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="100"
                            Height="25"
                            Margin="10,0,10,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            AutoToolTipPlacement="TopLeft"
                            AutoToolTipPrecision="2"
                            Focusable="False"
                            IsMoveToPointEnabled="True"
                            IsTabStop="False"
                            Maximum="1"
                            Minimum="0"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            SmallChange="0.01"
                            Visibility="Hidden"
                            Value="{Binding Settings.MediaVolume, Mode=TwoWay}"
                            >
                            <i:Interaction.Behaviors>
                                <core:FreeSlideBehavior />
                            </i:Interaction.Behaviors>
                        </Slider>

                        <!--  Media Control  -->
                        <utils:ZoomBorder
                            x:Name="borderMed"
                            Grid.Column="1"
                            Margin="0,44,0,29"
                            Background="Transparent"
                            ClipToBounds="True"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            >
                            <ffme:MediaElement
                                x:Name="MediaView"
                                IsMuted="{Binding Settings.MediaMuted, Mode=TwoWay}"
                                LoadedBehavior="Play"
                                LoopingBehavior="Play"
                                MediaClosed="MediaView_MediaClosed"
                                MediaOpened="MediaView_MediaOpened"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                ScrubbingEnabled="True"
                                SpeedRatio="1"
                                StretchDirection="{Binding Settings.StretchImageToggle, Converter={StaticResource BoolToStretchDirectionConverter}, Mode=OneWay}"
                                UnloadedBehavior="Manual"
                                Volume="{Binding Settings.MediaVolume, Mode=TwoWay}"
                                />
                        </utils:ZoomBorder>

                        <!--  Image Control  -->
                        <utils:ZoomBorder
                            x:Name="borderImg"
                            Grid.Column="1"
                            Margin="0,44,0,0"
                            Background="Transparent"
                            ClipToBounds="True"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            >
                            <Image
                                Name="PictureView"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Source="{Binding ImageSource, Mode=OneWay, IsAsync=True}"
                                StretchDirection="{Binding Settings.StretchImageToggle, Converter={StaticResource BoolToStretchDirectionConverter}, Mode=OneWay, IsAsync=True}"
                                />
                        </utils:ZoomBorder>
                    </Grid>
                </Grid>
            </Controls:MetroTabItem>
            <Controls:MetroTabItem
                Controls:HeaderedControlHelper.HeaderFontSize="16"
                Header="{local:Loc Settings,
                                   Mode=OneWay,
                                   IsAsync=True}"
                >
                <!--  Custom content here  -->
                <ScrollViewer
                    Focusable="False"
                    VerticalScrollBarVisibility="Auto"
                    >
                    <StackPanel
                        Orientation="Vertical"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        >

                        <Grid
                            Grid.IsSharedSizeScope="True"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto"
                                    SharedSizeGroup="A"
                                    />
                                <!--<ColumnDefinition Width="Auto" />-->
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Separator
                                Grid.ColumnSpan="3"
                                VerticalAlignment="Top"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />

                            <!--  Reset Settings Button  -->
                            <Button
                                Grid.Row="0"
                                Grid.Column="0"
                                MinWidth="100"
                                Margin="20,10,10,27"
                                HorizontalAlignment="Left"
                                Click="OnResetSettingsClick"
                                Content="{local:Loc ResetSettingsButton,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                Focusable="False"
                                FontSize="14"
                                IsTabStop="False"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />

                            <!--  Language Dropdown  -->
                            <TextBlock
                                Grid.Row="1"
                                Margin="20,0,0,0"
                                VerticalAlignment="Top"
                                FontWeight="DemiBold"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Text="{local:Loc Language,
                                                 Mode=OneWay,
                                                 IsAsync=True}"
                                TextAlignment="Left"
                                ToolTip="{local:Loc ShownLanguageInfo,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                />
                            <Controls:SplitButton
                                x:Name="ShownLanguageDrop"
                                Grid.Row="1"
                                Height="60"
                                Margin="20,25,5,0"
                                VerticalAlignment="Top"
                                Click="OnLanguageClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Settings.GetLanguageString, Mode=OneTime}"
                                Orientation="Vertical"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                SelectedIndex="{Binding Settings.ShownLanguageDropIndex, Mode=TwoWay}"
                                />

                            <!--  Dark Mode Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="2"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{local:Loc DarkMode,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                IsOn="{Binding Settings.DarkModeToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffContent="{local:Loc Off,
                                                       Mode=OneWay,
                                                       IsAsync=True}"
                                OnContent="{local:Loc On,
                                                      Mode=OneWay,
                                                      IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                ToolTip="{local:Loc DarkModeInfo,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                />

                            <!--  Theme Accent Dropdown  -->
                            <TextBlock
                                Grid.Row="3"
                                Margin="20,40,0,0"
                                VerticalAlignment="Top"
                                FontWeight="DemiBold"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Text="{local:Loc ThemeAccent,
                                                 Mode=OneWay,
                                                 IsAsync=True}"
                                TextAlignment="Left"
                                ToolTip="{local:Loc ThemeAccentInfo,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                />
                            <Controls:SplitButton
                                x:Name="ThemeAccentDrop"
                                Grid.Row="3"
                                Height="60"
                                Margin="20,65,5,0"
                                VerticalAlignment="Center"
                                Click="OnAccentClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Settings.ThemeAccents, Mode=OneWay}"
                                Orientation="Vertical"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                SelectedIndex="{Binding Settings.ThemeAccentDropIndex, Mode=TwoWay}"
                                >
                                <Controls:SplitButton.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="BorderBrush" Value="{Binding Converter={StaticResource TextToColorConverter}}" />
                                        <Setter Property="BorderThickness" Value="20,0,0,0" />
                                    </Style>
                                </Controls:SplitButton.ItemContainerStyle>
                            </Controls:SplitButton>

                            <!--  Stretch Image Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="4"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{local:Loc StretchImage,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                IsOn="{Binding Settings.StretchImageToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffContent="{local:Loc Off,
                                                       Mode=OneWay,
                                                       IsAsync=True}"
                                OnContent="{local:Loc On,
                                                      Mode=OneWay,
                                                      IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ToolTip="{local:Loc StretchImageInfo,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                />

                            <!--  Downsize Image  -->
                            <Controls:ToggleSwitch
                                Grid.Row="5"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{local:Loc DownsizeImage,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                IsOn="{Binding Settings.DownsizeImageToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffContent="{local:Loc Off,
                                                       Mode=OneWay,
                                                       IsAsync=True}"
                                OnContent="{local:Loc On,
                                                      Mode=OneWay,
                                                      IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                ToolTip="{local:Loc DownsizeImageInfo,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                />

                            <!--  Zoom Sensitivity  -->
                            <TextBlock
                                Grid.Row="6"
                                Margin="20,0,0,0"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Text="{local:Loc ZoomSensitivity,
                                                 Mode=OneWay,
                                                 IsAsync=True}"
                                TextAlignment="Left"
                                ToolTip="{local:Loc ZoomSensitivityInfo,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                />
                            <TextBlock
                                Grid.Row="6"
                                Margin="10,80,0,0"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Text="{Binding Settings.ZoomSensitivityString, Mode=OneWay, IsAsync=True}"
                                TextAlignment="Center"
                                />
                            <Slider
                                Grid.Row="6"
                                Margin="20,60,5,0"
                                VerticalAlignment="Top"
                                Focusable="False"
                                IsSnapToTickEnabled="True"
                                IsTabStop="False"
                                LargeChange="0.05"
                                Maximum="2"
                                Minimum="0.1"
