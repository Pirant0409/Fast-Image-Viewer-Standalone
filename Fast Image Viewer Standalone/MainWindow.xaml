<Controls:MetroWindow x:Name="MainFIV" x:Class="FIVStandard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FIVStandard"
        xmlns:utils="clr-namespace:FIVStandard.Utils"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="FIV" 
        Height="600" Width="800" 
        FontSize="16" 
        WindowStartupLocation="CenterScreen" 
        KeyDown="OnKeyDown" 
        Icon="Resources/FIVIcon.ico" WindowState="Maximized"
        MouseDown="OnMouseDown" MinWidth="600" MinHeight="480"
        >

    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands IsTabStop="False" Focusable="False">
            <Button Content="settings" Click="OnSettingsClick" IsTabStop="False" Focusable="False" />
            <Button Content="donate" Click="OnDonateClick" IsTabStop="False" Focusable="False" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    
    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl IsTabStop="False" Focusable="False">
            <Controls:Flyout x:Name="SettingsFlyout" 
                             Width="440"
                             Header="Settings" 
                             Position="Right" 
                             Theme="Adapt" 
                             AllowFocusElement="False" 
                             IsTabStop="False" 
                             Focusable="False"
                             >
                <!-- Your custom content here -->
                <StackPanel>
                    <Separator/>
                    
                    <!-- Dark Mode Toggle -->
                    <Grid>
                        <Controls:ToggleSwitch x:Name="DarkModeToggle" 
                                               Header="Dark Mode" 
                                               Width="120" 
                                               Height="100" 
                                               Padding="20,20,0,0" 
                                               HorizontalAlignment="Left" 
                                               VerticalAlignment="Center" 
                                               Focusable="False" 
                                               IsTabStop="False" 
                                               IsChecked="true" 
                                               />
                        
                        <StackPanel Orientation="Horizontal" Margin="130,0,0,0" Height="60" VerticalAlignment="Bottom">
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                        </StackPanel>
                        
                        <TextBlock HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom" 
                                   Width="300"
                                   Height="60" 
                                   Padding="0,0,20,0" 
                                   Margin="0"
                                   TextWrapping="Wrap" 
                                   Text="Switch between Light and Dark mode."
                                   >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="White" Opacity="0.5"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Grid>
                    
                    <!-- Stretch Image Toggle -->
                    <Grid>
                        <Controls:ToggleSwitch x:Name="StretchImageToggle" 
                                               Header="Stretch Image" 
                                               Width="120" 
                                               Height="100" 
                                               Padding="20,20,0,0" 
                                               HorizontalAlignment="Left" 
                                               VerticalAlignment="Center" 
                                               Focusable="False" 
                                               IsTabStop="False" 
                                               IsChecked="true" 
                                               />
                        
                        <StackPanel Orientation="Horizontal" Margin="130,0,0,0" Height="60" VerticalAlignment="Bottom">
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                        </StackPanel>
                        
                        <TextBlock HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom" 
                                   Width="300"
                                   Height="60" 
                                   Padding="0,0,20,0" 
                                   Margin="0"
                                   TextWrapping="Wrap" 
                                   Text="Always stretch images to fit the window. Quick toggle shortcut: 'F'"
                                   >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="White" Opacity="0.5"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Grid>
                    
                    <!-- Theme Accent Dropdown-->
                    <Grid>
                        <Controls:ToggleSwitch x:Name="togledummy2" 
                                               Header="nun" 
                                               Width="120" 
                                               Height="100" 
                                               Padding="20,20,0,0" 
                                               HorizontalAlignment="Left" 
                                               VerticalAlignment="Center" 
                                               Focusable="False" 
                                               IsTabStop="False" 
                                               IsChecked="true" 
                                               />
                        
                        <StackPanel Orientation="Horizontal" Margin="130,0,0,0" Height="60" VerticalAlignment="Bottom">
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                        </StackPanel>
                        
                        <TextBlock HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom" 
                                   Width="300"
                                   Height="60" 
                                   Padding="0,0,20,0" 
                                   Margin="0"
                                   TextWrapping="Wrap" 
                                   Text="nun"
                                   >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="White" Opacity="0.5"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>
    
    <Grid Margin="0,0,0,0">
        <Button x:Name="Btn_Prev" 
                Width="60" Height="40" 
                Margin="0,2,80,0" 
                VerticalAlignment="Top" 
                Click="OnClick_Prev" 
                IsTabStop="False" 
                Focusable="False" 
                ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                Content="🡄" 
                FontSize="30" 
                Padding="0" 
                />

        <Button x:Name="Btn_Next" 
                Width="60" Height="40" 
                Margin="80,2,0,0" 
                VerticalAlignment="Top" 
                Click="OnClick_Next" 
                IsTabStop="False" 
                Focusable="False" 
                ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                Content="🡆" 
                FontSize="30" 
                Padding="0" 
                />

        <Button Content="Open" 
                Width="75" 
                Margin="0,10,10,0" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right" 
                Click="OpenBrowseImage" 
                IsTabStop="False" 
                Focusable="False" 
                ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                Padding="0" 
                />

        <utils:ZoomBorder x:Name="border" 
                      ClipToBounds="True" 
                      Background="#FF2F3136" 
                      Margin="0,44,0,0" Padding="0" Canvas.Left="0" Canvas.Top="0" Grid.Row="1" Grid.RowSpan="9" Grid.ColumnSpan="10" Grid.Column="1" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <MediaElement Name="MediaView" 
                          LoadedBehavior="Manual" UnloadedBehavior="Manual" 
                          ScrubbingEnabled="True" 
                          StretchDirection="DownOnly" 
                          MediaEnded="OnClipEnded" 
                          ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                          />
        </utils:ZoomBorder>
    </Grid>
</Controls:MetroWindow>