<Controls:MetroWindow
    x:Class="FIVStandard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:converter="clr-namespace:FIVStandard.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FIVStandard"
    xmlns:localized="http://gu.se/Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:FIVStandard.Properties"
    xmlns:utils="clr-namespace:FIVStandard.Utils"
    x:Name="MainFIV"
    Title="{Binding TitleInformation, Mode=OneWay}"
    Width="800"
    Height="600"
    MinWidth="600"
    MinHeight="480"
    FontSize="16"
    Icon="Resources/FIVIcon.ico"
    IsTabStop="False"
    Loaded="OnAppLoaded"
    MouseDown="OnMouseDown"
    PreviewKeyDown="OnKeyDown"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources>
        <converter:TextToColorConverter x:Key="TextToColorConverter" />
        <converter:KeyToStringConverter x:Key="KeyToStringConverter" />
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converter:BoolToVisibilityConverterReverse x:Key="BoolToVisibilityConverterReverse" />
        <converter:BoolFromAccentToGrayConverter x:Key="BoolFromAccentToGrayConverter" />

        <Style
            x:Key="ListBoxItemStyle"
            BasedOn="{StaticResource {x:Type ListBoxItem}}"
            TargetType="ListBoxItem">

            <Setter Property="Padding" Value="5" />
            <Setter Property="IsTabStop" Value="False" />
            <!--  Fixes spacebar not working and some other bugs if selecting via mouse but disables now the actual selecing  -->
            <Setter Property="Focusable" Value="False" />
            <EventSetter
                Event="PreviewMouseDown"
                Handler="ListBox_PreviewMouseDown" />
        </Style>
    </Window.Resources>

    <!--  Window Bar Buttons  -->
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands
            Focusable="False"
            IsTabStop="False">
            <Button
                Click="OnDonateClick"
                Content="{localized:Static p:Resources.Donate}"
                Focusable="False"
                IsTabStop="False" />
            <Button
                Click="OnCheckUpdateClick"
                Content="{localized:Static p:Resources.CheckForUpdates}"
                Focusable="False"
                IsEnabled="{Binding AppUpdater.NotUpdating, Mode=OneWay}"
                IsTabStop="False" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid
        Focusable="False"
        ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <StackPanel
            Height="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <Border
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="#00000000"
                ToolTip="{localized:Static p:Resources.DarkModeOnTooltip}"
                Visibility="{Binding Settings.DarkModeToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <!--  Data="M0 128v768h768V128H0zM64 832V192h640L64 832z"  -->
                <Path
                    Data="M16,20 C16.3453,20 16.6803809,19.9562469 17.0000012,19.8739822 C15.2747721,19.429939 14,17.8638391 14,16 C14,14.1361609 15.2747721,12.570061 17.0000012,12.1260178 C16.6803809,12.0437531 16.3453,12 16,12 C13.7908609,12 12,13.7908609 12,16 C12,18.2091391 13.7908609,20 16,20 Z M16,22 C12.6862913,22 10,19.3137087 10,16 C10,12.6862913 12.6862913,10 16,10 C19.3137087,10 22,12.6862913 22,16 C22,19.3137087 19.3137087,22 16,22 Z M16,22"
                    Fill="{DynamicResource AccentColorBrush}"
                    Stretch="Uniform" />
            </Border>
            <Border
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="#00000000"
                ToolTip="{localized:Static p:Resources.StretchOnTooltip}"
                Visibility="{Binding Settings.StretchImageToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Path
                    Data="M20,2H4C2.89,2 2,2.89 2,4V20C2,21.11 2.89,22 4,22H20C21.11,22 22,21.11 22,20V4C22,2.89 21.11,2 20,2M9,19H5V15L6.29,16.29L7.83,14.75L9.25,16.17L7.71,17.71M7.83,9.25L6.29,7.71L5,9V5H9L7.71,6.29L9.25,7.83M19,19H15L16.29,17.71L14.75,16.17L16.17,14.75L17.71,16.29L19,15M19,9L17.71,7.71L16.17,9.25L14.75,7.83L16.29,6.29L15,5H19"
                    Fill="{DynamicResource AccentColorBrush}"
                    Stretch="Uniform" />
            </Border>
            <Border
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="#00000000"
                ToolTip="{localized:Static p:Resources.DownsizeOnTooltip}"
                Visibility="{Binding Settings.DownsizeImageToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Path
                    Data="M21,15H23V17H21V15M21,11H23V13H21V11M23,19H21V21C22,21 23,20 23,19M13,3H15V5H13V3M21,7H23V9H21V7M21,3V5H23C23,4 22,3 21,3M1,7H3V9H1V7M17,3H19V5H17V3M17,19H19V21H17V19M3,3C2,3 1,4 1,5H3V3M9,3H11V5H9V3M5,3H7V5H5V3M1,11V19A2,2 0 0,0 3,21H15V11H1M3,19L5.5,15.79L7.29,17.94L9.79,14.72L13,19H3Z"
                    Fill="{DynamicResource AccentColorBrush}"
                    Stretch="Uniform" />
            </Border>
            <Border
                Width="15"
                Height="15"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Background="#00000000"
                ToolTip="{localized:Static p:Resources.ThumbnailListOnTooltip}"
                Visibility="{Binding Settings.EnableThumbnailListToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                <Path
                    Data="M4 14h4v-4H4v4zm0 5h4v-4H4v4zM4 9h4V5H4v4zm5 5h12v-4H9v4zm0 5h12v-4H9v4zM9 5v4h12V5H9z"
                    Fill="{DynamicResource AccentColorBrush}"
                    Stretch="Uniform" />
            </Border>
        </StackPanel>
        <Controls:MetroTabControl
            Focusable="False"
            IsEnabled="{Binding Settings.ShortcutButtonsOn, Mode=OneWay}"
            IsTabStop="False"
            ScrollViewer.VerticalScrollBarVisibility="Disabled">

            <Controls:MetroTabItem
                Controls:ControlsHelper.HeaderFontSize="16"
                Header="{localized:Static p:Resources.General}">
                <Grid
                    Focusable="False"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <!--  Context Menu | Window  -->
                    <Grid.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                Click="OnOpenFileLocation"
                                Header="{localized:Static p:Resources.OpenFileLocation}" />
                            <MenuItem
                                Click="OnCopyToClipboard"
                                Header="{localized:Static p:Resources.CopyImageToClipboard}" />
                            <MenuItem
                                Click="OnCutToClipboard"
                                Header="{localized:Static p:Resources.CutFileToClipboard}" />
                            <Separator />
                            <MenuItem
                                Click="OnDeleteClick"
                                Header="{localized:Static p:Resources.Delete}" />
                        </ContextMenu>
                    </Grid.ContextMenu>

                    <Separator VerticalAlignment="Top" />

                    <!--  Image Information  -->
                    <Border
                        Width="200"
                        Height="40"
                        Margin="2,2,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Focusable="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <TextBlock
                            VerticalAlignment="Center"
                            Focusable="False"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            Text="{Binding ImgResolution, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </Border>

                    <Button
                        x:Name="Btn_Prev"
                        Width="60"
                        Height="40"
                        Margin="0,3,80,0"
                        Padding="0"
                        VerticalAlignment="Top"
                        Click="OnClick_Prev"
                        Content="🡄"
                        Focusable="False"
                        FontSize="25"
                        IsTabStop="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled" />

                    <Button
                        x:Name="Btn_Next"
                        Width="60"
                        Height="40"
                        Margin="80,3,0,0"
                        Padding="0"
                        VerticalAlignment="Top"
                        Click="OnClick_Next"
                        Content="🡆"
                        Focusable="False"
                        FontSize="25"
                        IsTabStop="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled" />

                    <Button
                        Width="75"
                        Margin="0,10,10,0"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="OnOpenBrowseImage"
                        Content="{localized:Static p:Resources.Open}"
                        Focusable="False"
                        IsTabStop="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled" />

                    <!--  MediaElement Control  -->
                    <Grid
                        Focusable="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ListBox
                            x:Name="thumbnailList"
                            Margin="0,44,0,0"
                            Focusable="False"
                            IsSynchronizedWithCurrentItem="True"
                            IsTabStop="False"
                            IsTextSearchEnabled="False"
                            ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                            ItemsSource="{Binding ImagesDataView, Mode=OneWay}"
                            SelectedItem="{Binding ImageItem, Mode=TwoWay}"
                            SelectionChanged="ThumbnailList_SelectionChanged"
                            Visibility="{Binding Settings.EnableThumbnailListToggle, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid
                                        VerticalAlignment="Top"
                                        Columns="{Binding Settings.ThumbnailListColumns, Mode=OneWay}"
                                        Focusable="False"
                                        IsItemsHost="True" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        BorderBrush="{DynamicResource AccentColorBrush}"
                                        BorderThickness="2"
                                        Focusable="False">
                                        <StackPanel
                                            Width="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                            Height="{Binding Settings.ThumbnailSizePlusText, Mode=OneWay}"
                                            Focusable="False"
                                            ToolTip="{Binding ThumbnailName, Mode=OneWay}">
                                            <TextBlock
                                                Width="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                                Focusable="False"
                                                FontSize="10"
                                                Text="{Binding ThumbnailName, Mode=OneWay}"
                                                TextAlignment="Center"
                                                TextTrimming="CharacterEllipsis" />

                                            <Image
                                                Width="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                                Height="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                                Focusable="False"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                Source="{Binding ThumbnailImage, Mode=OneWay, IsAsync=True}" />
                                            <!--
                                            <MediaElement
                                                Width="80"
                                                Height="80"
                                                Focusable="False"
                                                IsMuted="True"
                                                MediaEnded="ThumbnailMedia_OnClipEnded"
                                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                Source="{Binding ThumbnailMedia, Mode=OneWay, IsAsync=True}"
                                                UnloadedBehavior="Manual"
                                                Visibility="{Binding IsAnimated, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                                            -->
                                            <Border
                                                Width="{Binding Settings.ThumbnailSizeGifTag, Mode=OneWay}"
                                                Height="{Binding Settings.ThumbnailSizeGifTag, Mode=OneWay}"
                                                Margin="-40,-40,0,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Background="#00000000"
                                                Focusable="False"
                                                ToolTip="{localized:Static p:Resources.DownsizeOnTooltip}"
                                                Visibility="{Binding IsAnimated, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}">
                                                <Path
                                                    Data="M8.00684834,10 C6.34621185,10 5,11.3422643 5,12.9987856 L5,20.0012144 C5,21.6573979 6.33599155,23 8.00684834,23 L24.9931517,23 C26.6537881,23 28,21.6577357 28,20.0012144 L28,12.9987856 C28,11.3426021 26.6640085,10 24.9931517,10 L8.00684834,10 L8.00684834,10 Z M13,17 L13,19 L10.9998075,19 C10.4437166,19 10,18.5523709 10,18.0001925 L10,14.9998075 C10,14.4437166 10.4476291,14 10.9998075,14 L14,14 L14,13 L11.0048815,13 C9.89761602,13 9,13.8865548 9,15.0059191 L9,17.9940809 C9,19.1019194 9.8938998,20 11.0048815,20 L14,20 L14,19.25 L14,19.25 L14,17 L14,16 L11,16 L11,17 L13,17 L13,17 Z M16,14 L16,19 L15,19 L15,20 L18,20 L18,19 L17,19 L17,14 L18,14 L18,13 L15,13 L15,14 L16,14 L16,14 Z M20,16 L20,14 L24,14 L24,13 L19,13 L19,20 L20,20 L20,17 L23,17 L23,16 L20,16 L20,16 Z"
                                                    Fill="{DynamicResource AccentColorBrush}"
                                                    Focusable="False"
                                                    Stretch="Uniform"
                                                    StrokeThickness="1" />
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <utils:ZoomBorder
                            x:Name="border"
                            Grid.Column="1"
                            Margin="0,44,0,0"
                            Background="#FF2F3136"
                            ClipToBounds="True"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            <MediaElement
                                Name="MediaView"
                                Focusable="False"
                                LoadedBehavior="Manual"
                                MediaEnded="OnClipEnded"
                                MediaOpened="OnClipOpened"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Source="{Binding MediaSource, Mode=OneWay, IsAsync=True}"
                                StretchDirection="DownOnly"
                                UnloadedBehavior="Manual" />
                        </utils:ZoomBorder>

                        <!--  Image Control  -->
                        <utils:ZoomBorder
                            x:Name="borderImg"
                            Grid.Column="1"
                            Margin="0,44,0,0"
                            Background="#FF2F3136"
                            ClipToBounds="True"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            <Image
                                Name="PictureView"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Source="{Binding ImageSource, Mode=OneWay}"
                                StretchDirection="DownOnly" />
                        </utils:ZoomBorder>
                    </Grid>
                </Grid>
            </Controls:MetroTabItem>
            <Controls:MetroTabItem
                Controls:ControlsHelper.HeaderFontSize="16"
                Header="{localized:Static p:Resources.Settings}">
                <!--  Custom content here  -->
                <ScrollViewer
                    Focusable="False"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel
                        Focusable="False"
                        Orientation="Vertical">

                        <Grid
                            Focusable="False"
                            Grid.IsSharedSizeScope="True"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto"
                                    SharedSizeGroup="A" />
                                <!--<ColumnDefinition Width="Auto" />-->
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Separator
                                Grid.ColumnSpan="3"
                                VerticalAlignment="Top" />

                            <!--  Reset Settings Button  -->
                            <Button
                                Grid.Row="0"
                                Grid.Column="0"
                                MinWidth="100"
                                Margin="20,10,10,27"
                                HorizontalAlignment="Left"
                                Click="OnResetSettingsClick"
                                Content="{localized:Static p:Resources.ResetSettingsButton}"
                                Focusable="False"
                                FontSize="14"
                                IsTabStop="False" />

                            <!--  Language Dropdown  -->
                            <TextBlock
                                Grid.Row="1"
                                Margin="20,0,0,0"
                                VerticalAlignment="Top"
                                FontWeight="DemiBold"
                                Text="{localized:Static p:Resources.Language}"
                                TextAlignment="Left"
                                ToolTip="{localized:Static p:Resources.ShownLanguageInfo}" />
                            <Controls:SplitButton
                                x:Name="ShownLanguageDrop"
                                Grid.Row="1"
                                Height="60"
                                Margin="20,25,5,0"
                                VerticalAlignment="Top"
                                Click="OnLanguageClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Settings.GetLanguageString, Mode=OneTime}"
                                Orientation="Vertical"
                                SelectedIndex="{Binding Settings.ShownLanguageDropIndex, Mode=TwoWay}" />

                            <!--  Dark Mode Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="2"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{localized:Static p:Resources.DarkMode}"
                                IsChecked="{Binding Settings.DarkModeToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static p:Resources.Off}"
                                OnLabel="{localized:Static p:Resources.On}"
                                ToolTip="{localized:Static p:Resources.DarkModeInfo}" />

                            <!--  Theme Accent Dropdown  -->
                            <TextBlock
                                Grid.Row="3"
                                Margin="20,40,0,0"
                                VerticalAlignment="Top"
                                FontWeight="DemiBold"
                                Text="{localized:Static p:Resources.ThemeAccent}"
                                TextAlignment="Left"
                                ToolTip="{localized:Static p:Resources.ThemeAccentInfo}" />
                            <Controls:SplitButton
                                x:Name="ThemeAccentDrop"
                                Grid.Row="3"
                                Height="60"
                                Margin="20,65,5,0"
                                VerticalAlignment="Center"
                                Click="OnAccentClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Settings.ThemeAccents, Mode=OneWay}"
                                Orientation="Vertical"
                                SelectedIndex="{Binding Settings.ThemeAccentDropIndex, Mode=TwoWay}">
                                <Controls:SplitButton.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="BorderBrush" Value="{Binding Converter={StaticResource TextToColorConverter}}" />
                                        <Setter Property="BorderThickness" Value="20,0,0,0" />
                                    </Style>
                                </Controls:SplitButton.ItemContainerStyle>
                            </Controls:SplitButton>

                            <!--  Stretch Image Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="4"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{localized:Static p:Resources.StretchImage}"
                                IsChecked="{Binding Settings.StretchImageToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static p:Resources.Off}"
                                OnLabel="{localized:Static p:Resources.On}"
                                ToolTip="{localized:Static p:Resources.StretchImageInfo}" />

                            <!--  Downsize Image  -->
                            <Controls:ToggleSwitch
                                Grid.Row="5"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{localized:Static p:Resources.DownsizeImage}"
                                IsChecked="{Binding Settings.DownsizeImageToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static p:Resources.Off}"
                                OnLabel="{localized:Static p:Resources.On}"
                                ToolTip="{localized:Static p:Resources.DownsizeImageInfo}" />

                            <!--  Zoom Sensitivity  -->
                            <TextBlock
                                Grid.Row="6"
                                Margin="20,0,0,0"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                Text="{localized:Static p:Resources.ZoomSensitivity}"
                                TextAlignment="Left"
                                ToolTip="{localized:Static p:Resources.ZoomSensitivityInfo}" />
                            <TextBlock
                                Grid.Row="6"
                                Margin="10,70,0,0"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                Text="{Binding Settings.ZoomSensitivityString, Mode=OneWay}"
                                TextAlignment="Center" />
                            <Slider
                                Grid.Row="6"
                                Margin="20,60,5,0"
                                VerticalAlignment="Top"
                                Focusable="False"
                                IsSnapToTickEnabled="True"
                                IsTabStop="False"
                                LargeChange="0.05"
                                Maximum="2"
                                Minimum="0.1"
                                TickFrequency="0.05"
                                Value="{Binding Settings.ZoomSensitivity, Mode=TwoWay}" />

                            <!--  Check for Updates at Startup  -->
                            <Controls:ToggleSwitch
                                Grid.Row="7"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{localized:Static p:Resources.CheckForUpdatesStartToggle}"
                                IsChecked="{Binding Settings.CheckForUpdatesStartToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static p:Resources.Off}"
                                OnLabel="{localized:Static p:Resources.On}"
                                ToolTip="{localized:Static p:Resources.CheckForUpdatesStartToggleInfo}" />

                            <!--  Autoupdate on Update Check  -->
                            <Controls:ToggleSwitch
                                Grid.Row="8"
                                Padding="60,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{localized:Static p:Resources.AutoupdateToggle}"
                                IsChecked="{Binding Settings.AutoupdateToggle, Mode=TwoWay}"
                                IsEnabled="{Binding Settings.CheckForUpdatesStartToggle}"
                                IsTabStop="False"
                                OffLabel="{localized:Static p:Resources.Off}"
                                OnLabel="{localized:Static p:Resources.On}"
                                ToolTip="{localized:Static p:Resources.AutoupdateToggleInfo}" />

                            <!--  Enable Thumbnail List Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="9"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{localized:Static p:Resources.EnableThumbnailList}"
                                IsChecked="{Binding Settings.EnableThumbnailListToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static p:Resources.Off}"
                                OnLabel="{localized:Static p:Resources.On}"
                                ToolTip="{localized:Static p:Resources.EnableThumbnailListInfo}" />

                            <!--  Thumbnail Size  -->
                            <TextBlock
                                Grid.Row="10"
                                Margin="60,0,-20,0"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                Text="{localized:Static p:Resources.ThumbnailSize}"
                                TextAlignment="Left"
                                ToolTip="{localized:Static p:Resources.ThumbnailSizeInfo}" />
                            <TextBlock
                                Grid.Row="10"
                                Margin="50,70,-20,0"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                Text="{Binding Settings.ThumbnailSize, Mode=OneWay}"
                                TextAlignment="Center" />
                            <Slider
                                Grid.Row="10"
                                Margin="60,60,-15,0"
                                VerticalAlignment="Top"
                                Focusable="False"
                                IsEnabled="{Binding Settings.EnableThumbnailListToggle}"
                                IsSnapToTickEnabled="True"
                                IsTabStop="False"
                                LargeChange="5"
                                Maximum="120"
                                Minimum="40"
                                SmallChange="5"
                                TickFrequency="5"
                                Value="{Binding Settings.ThumbnailSize, Mode=TwoWay}" />

                            <!--  Thumbnail Resolution  -->
                            <TextBlock
                                Grid.Row="11"
                                Margin="60,0,-20,0"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                Text="{localized:Static p:Resources.ThumbnailRes}"
                                TextAlignment="Left"
                                ToolTip="{localized:Static p:Resources.ThumbnailResInfo}" />
                            <TextBlock
                                Grid.Row="11"
                                Margin="50,70,-20,0"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                Text="{Binding Settings.ThumbnailRes, Mode=OneWay}"
                                TextAlignment="Center" />
                            <Slider
                                Grid.Row="11"
                                Margin="60,60,-15,0"
                                VerticalAlignment="Top"
                                Focusable="False"
                                IsEnabled="{Binding Settings.EnableThumbnailListToggle}"
