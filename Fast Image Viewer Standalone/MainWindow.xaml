                                                    Fill="{DynamicResource MahApps.Brushes.Accent}"
                                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                    Stretch="Uniform"
                                                    />-->
                                                <Path
                                                    VerticalAlignment="Top"
                                                    Data="F1 M 21,25L 55,25C 56.1045,25 57,25.8955 57,27L 57,49C 57,50.1046 56.1045,51 55,51L 21,51C 19.8954,51 19,50.1046 19,49L 19,27C 19,25.8955 19.8954,25 21,25 Z M 26.7692,29C 25.2398,29 24,30.5111 24,32.375L 24,43.625C 24,45.489 25.2398,47 26.7692,47L 42.2307,47C 43.7601,47 45,45.489 45,43.625L 45,41L 51,46L 52,46L 52,30L 51,30L 45,35L 45,32.375C 45,30.5111 43.7601,29 42.2307,29L 26.7692,29 Z"
                                                    Fill="{DynamicResource MahApps.Brushes.Accent}"
                                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                    Stretch="Uniform"
                                                    />
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!--  Progress Slider Control  -->
                        <Slider
                            x:Name="MediaProgression"
                            Grid.Row="0"
                            Grid.Column="1"
                            Height="25"
                            Margin="10,0,10,2"
                            VerticalAlignment="Bottom"
                            Focusable="False"
                            IsMoveToPointEnabled="True"
                            IsTabStop="False"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            Visibility="Hidden"
                            Value="{Binding Path=Position, ElementName=MediaView, Converter={StaticResource TimeSpanTickConverter}, Mode=TwoWay}"
                            >
                            <i:Interaction.Behaviors>
                                <core:FreeSlideBehavior />
                            </i:Interaction.Behaviors>
                        </Slider>

                        <!--  Media Control  -->
                        <utils:ZoomBorder
                            x:Name="border"
                            Grid.Column="1"
                            Margin="0,44,0,29"
                            Background="Transparent"
                            ClipToBounds="True"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            >
                            <ffme:MediaElement
                                x:Name="MediaView"
                                IsMuted="True"
                                LoadedBehavior="Play"
                                LoopingBehavior="Play"
                                MediaClosed="MediaView_MediaClosed"
                                MediaOpened="MediaView_MediaOpened"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                ScrubbingEnabled="True"
                                StretchDirection="{Binding Settings.StretchImageToggle, Converter={StaticResource BoolToStretchDirectionConverter}, Mode=OneWay}"
                                UnloadedBehavior="Manual"
                                />
                        </utils:ZoomBorder>

                        <!--  Image Control  -->
                        <utils:ZoomBorder
                            x:Name="borderImg"
                            Grid.Column="1"
                            Margin="0,44,0,0"
                            Background="Transparent"
                            ClipToBounds="True"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            >
                            <Image
                                Name="PictureView"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Source="{Binding ImageSource, Mode=OneWay, IsAsync=True}"
                                StretchDirection="{Binding Settings.StretchImageToggle, Converter={StaticResource BoolToStretchDirectionConverter}, Mode=OneWay, IsAsync=True}"
                                />
                        </utils:ZoomBorder>
                    </Grid>
                </Grid>
            </Controls:MetroTabItem>
            <Controls:MetroTabItem
                Controls:HeaderedControlHelper.HeaderFontSize="16"
                Header="{local:Loc Settings,
                                   Mode=OneWay,
                                   IsAsync=True}"
                >
                <!--  Custom content here  -->
                <ScrollViewer
                    Focusable="False"
                    VerticalScrollBarVisibility="Auto"
                    >
                    <StackPanel
                        Orientation="Vertical"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        >

                        <Grid
                            Grid.IsSharedSizeScope="True"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto"
                                    SharedSizeGroup="A"
                                    />
                                <!--<ColumnDefinition Width="Auto" />-->
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Separator
                                Grid.ColumnSpan="3"
                                VerticalAlignment="Top"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />

                            <!--  Reset Settings Button  -->
                            <Button
                                Grid.Row="0"
                                Grid.Column="0"
                                MinWidth="100"
                                Margin="20,10,10,27"
                                HorizontalAlignment="Left"
                                Click="OnResetSettingsClick"
                                Content="{local:Loc ResetSettingsButton,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                Focusable="False"
                                FontSize="14"
                                IsTabStop="False"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                />

                            <!--  Language Dropdown  -->
                            <TextBlock
                                Grid.Row="1"
                                Margin="20,0,0,0"
                                VerticalAlignment="Top"
                                FontWeight="DemiBold"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Text="{local:Loc Language,
                                                 Mode=OneWay,
                                                 IsAsync=True}"
                                TextAlignment="Left"
                                ToolTip="{local:Loc ShownLanguageInfo,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                />
                            <Controls:SplitButton
                                x:Name="ShownLanguageDrop"
                                Grid.Row="1"
                                Height="60"
                                Margin="20,25,5,0"
                                VerticalAlignment="Top"
                                Click="OnLanguageClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Settings.GetLanguageString, Mode=OneTime}"
                                Orientation="Vertical"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                SelectedIndex="{Binding Settings.ShownLanguageDropIndex, Mode=TwoWay}"
                                />

                            <!--  Dark Mode Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="2"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{local:Loc DarkMode,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                IsOn="{Binding Settings.DarkModeToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffContent="{local:Loc Off,
                                                       Mode=OneWay,
                                                       IsAsync=True}"
                                OnContent="{local:Loc On,
                                                      Mode=OneWay,
                                                      IsAsync=True}"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                ToolTip="{local:Loc DarkModeInfo,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                />

                            <!--  Theme Accent Dropdown  -->
                            <TextBlock
                                Grid.Row="3"
                                Margin="20,40,0,0"
                                VerticalAlignment="Top"
                                FontWeight="DemiBold"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                Text="{local:Loc ThemeAccent,
                                                 Mode=OneWay,
                                                 IsAsync=True}"
                                TextAlignment="Left"
                                ToolTip="{local:Loc ThemeAccentInfo,
                                                    Mode=OneWay,
                                                    IsAsync=True}"
                                />
                            <Controls:SplitButton
                                x:Name="ThemeAccentDrop"
                                Grid.Row="3"
                                Height="60"
                                Margin="20,65,5,0"
                                VerticalAlignment="Center"
                                Click="OnAccentClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Settings.ThemeAccents, Mode=OneWay}"
                                Orientation="Vertical"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                SelectedIndex="{Binding Settings.ThemeAccentDropIndex, Mode=TwoWay}"
                                >
                                <Controls:SplitButton.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="BorderBrush" Value="{Binding Converter={StaticResource TextToColorConverter}}" />
                                        <Setter Property="BorderThickness" Value="20,0,0,0" />
                                    </Style>
                                </Controls:SplitButton.ItemContainerStyle>
                            </Controls:SplitButton>

                            <!--  Stretch Image Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="4"
                                Padding="20,40,0,0"
                                VerticalAlignment="Center"
                                ContentDirection="RightToLeft"
                                Focusable="False"
                                Header="{local:Loc StretchImage,
                                                   Mode=OneWay,
                                                   IsAsync=True}"
                                IsOn="{Binding Settings.StretchImageToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffContent="{local:Loc Off,
                                                       Mode=OneWay,
                                                       IsAsync=True}"
                                OnContent="{local:Loc On,
                                                      Mode=OneWay,
