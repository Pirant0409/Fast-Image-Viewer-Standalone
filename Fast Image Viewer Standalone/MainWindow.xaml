                            <!--  Language Dropdown  -->
                            <Controls:SplitButton
                                x:Name="ShownLanguageDrop"
                                Grid.Row="1"
                                Height="60"
                                Margin="20,40,0,0"
                                VerticalAlignment="Center"
                                Click="OnLanguageClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Path=GetLanguageString, Mode=OneTime}"
                                Orientation="Vertical"
                                SelectedIndex="{Binding Path=ShownLanguageDropIndex, Mode=TwoWay}"
                                />

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Height="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static properties:Resources.ShownLanguageInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  Dark Mode Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="2"
                                Width="140"
                                Height="100"
                                Padding="20,40,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Header="{localized:Static properties:Resources.DarkMode}"
                                IsChecked="{Binding Path=DarkModeToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static properties:Resources.Off}"
                                OnLabel="{localized:Static properties:Resources.On}"
                                />

                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="2"
                                Height="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static properties:Resources.DarkModeInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  Theme Accent Dropdown  -->
                            <Controls:SplitButton
                                x:Name="ThemeAccentDrop"
                                Grid.Row="3"
                                Height="60"
                                Margin="20,40,0,0"
                                VerticalAlignment="Center"
                                Click="OnAccentClick"
                                Focusable="False"
                                IsTabStop="False"
                                ItemsSource="{Binding Path=ThemeAccents, Mode=OneTime}"
                                Orientation="Vertical"
                                SelectedIndex="{Binding Path=ThemeAccentDropIndex, Mode=TwoWay}"
                                />

                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="2"
                                Height="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static properties:Resources.ThemeAccentInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  End View  -->
                            <Separator
                                Grid.Row="7"
                                Grid.ColumnSpan="3"
                                />

                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Separator
                                Grid.Row="0"
                                Grid.ColumnSpan="3"
                                />

                            <StackPanel
                                Grid.Row="0"
                                Grid.RowSpan="5"
                                Grid.Column="4"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <!--  Stretch Image Toggle  -->
                            <Controls:ToggleSwitch
                                Grid.Row="1"
                                Height="100"
                                Padding="20,40,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Header="{localized:Static properties:Resources.StretchImage}"
                                IsChecked="{Binding Path=StretchImageToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static properties:Resources.Off}"
                                OnLabel="{localized:Static properties:Resources.On}"
                                />

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Height="60"
                                Padding="0,0,20,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static properties:Resources.StretchImageInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  Downsize Image  -->
                            <Controls:ToggleSwitch
                                Grid.Row="2"
                                Height="100"
                                Padding="20,40,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Focusable="False"
                                Header="{localized:Static properties:Resources.DownsizeImage}"
                                IsChecked="{Binding Path=DownsizeImageToggle, Mode=TwoWay}"
                                IsTabStop="False"
                                OffLabel="{localized:Static properties:Resources.Off}"
                                OnLabel="{localized:Static properties:Resources.On}"
                                />

                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="2"
                                Height="60"
                                Padding="0,0,20,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static properties:Resources.DownsizeImageInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  Zoom Sensitivity  -->
                            <TextBlock
                                Grid.Row="3"
                                Margin="10,50,0,0"
                                VerticalAlignment="Center"
                                Text="{Binding Path=ZoomSensitivityString, Mode=OneWay}"
                                TextAlignment="Center"
                                />
                            <Slider
                                Grid.Row="3"
                                Width="120"
                                Height="100"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Focusable="False"
                                IsSnapToTickEnabled="True"
                                IsTabStop="False"
                                LargeChange="0.05"
                                Maximum="2"
                                Minimum="0.1"
                                TickFrequency="0.05"
                                Value="{Binding Path=ZoomSensitivity, Mode=TwoWay}"
                                />

                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="1"
                                Height="60"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal"
                                >
                                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="2"
                                Height="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Text="{localized:Static properties:Resources.ZoomSensitivityInfo}"
                                TextWrapping="Wrap"
                                />

                            <!--  End View  -->
                            <Separator
                                Grid.Row="7"
                                Grid.ColumnSpan="3"
                                />

                        </Grid>
                    </WrapPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem
                Controls:ControlsHelper.HeaderFontSize="16"
                Header="{localized:Static properties:Resources.Help}"
                >
                <Grid>
                    <Image Source="Resources/kblayoutkeys.png" />
                </Grid>
            </TabItem>
