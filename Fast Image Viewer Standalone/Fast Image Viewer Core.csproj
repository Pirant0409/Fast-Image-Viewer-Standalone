<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>

    <RootNamespace>FIVStandard</RootNamespace>
    <AssemblyName>Fast Image Viewer</AssemblyName>

    <DefineConstant>NETCONSTANT</DefineConstant>

    <ApplicationIcon>Resources\FIVIcon.ico</ApplicationIcon>

    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

    <PublishReadyToRun>true</PublishReadyToRun>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Resource Include="Resources\FIVIcon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FFME.Windows">
      <Version>4.3.340</Version>
    </PackageReference>
    <PackageReference Include="FFmpeg.AutoGen">
      <Version>4.3.1</Version>
    </PackageReference>
    <PackageReference Include="Magick.NET-Q8-AnyCPU">
      <Version>7.22.2.2</Version>
    </PackageReference>
    <PackageReference Include="Magick.NET.SystemWindowsMedia">
      <Version>3.0.2</Version>
    </PackageReference>
    <PackageReference Include="MahApps.Metro">
      <Version>2.4.0</Version>
    </PackageReference>
    <PackageReference Include="Microsoft-WindowsAPICodePack-Shell">
      <Version>1.1.4</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.19" />
    <PackageReference Include="Notifications.Wpf.Core" Version="1.3.2" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>
  
</Project>
